# Get some definitions via configure substitutions
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@

# human-readable name
Name: SysteMoC
# human-readable description
Description: SysteMoC modeling library
Version: @PACKAGE_VERSION@
URL: http://www12.informatik.uni-erlangen.de/research/scd
#Requires: glib-2.0 = 1.3.1
#Conflicts: foobar <= 4.5
Libs: -L${libdir} -lsystemoc
Libs.private: @SYSTEMC_LDFLAGS@ -lsystemc @BOOST_LDFLAGS@ -lboost_program_options@BOOST_LIBPOSTFIX@ -lcosupport-systemc -lcosupport-streams -lcosupport-smartptr -lcosupport-math
Cflags: -I${includedir} @SYSTEMC_INCLUDE@ @TLM1_INCLUDE@ @BOOST_INCLUDE@
