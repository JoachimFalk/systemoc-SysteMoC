#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_INIT(SysteMoC, 0.1, falk@cs.fau.de)
AC_PREREQ(2.57)
ACJF_INIT

AC_CONFIG_SRCDIR([SystemC-Examples.txt])

AC_CONFIG_AUX_DIR([../BuildSystem])

AC_CANONICAL_BUILD
AC_CANONICAL_HOST

dnl Checks for programs.
ACJF_CHECK_CROSSTOOL( CC, gcc)
ACJF_CHECK_CROSSTOOL( AR, ar)
ACJF_CHECK_CROSSTOOL( RANLIB, ranlib)
ACJF_CHECK_CROSSTOOL( NM, nm)
AC_PROG_CXX
AC_PROG_CXXCPP
AC_PROG_CPP
# Checks for programs.
#AC_PROG_LIBTOOL
#AC_PROG_INSTALL
#AC_PROG_LN_S
#AC_PROG_MAKE_SET

AM_INIT_AUTOMAKE
AC_CONFIG_HEADER([config.h])

AC_DISABLE_SHARED
AM_PROG_LIBTOOL

ACJF_ARG_DEBUG(yes, , [-DNDEBUG])

dnl check for exe extension
AC_EXEEXT

# Checks for header files.
# AC_FUNC_ALLOCA
# AC_HEADER_STDC
# AC_CHECK_HEADERS([OS.h fcntl.h limits.h mach/mach.h malloc.h stddef.h stdint.h stdlib.h string.h sys/time.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.

# Checks for library functions.

ACJF_SYSTEMC
ACJF_CHECK_LIB_BOOST

### SystemC-VPC ###
SYSTEMC_VPC_INCLUDE=" \
  -I\$(top_builddir)/../SysteMoC/include/systemoc \
  -I\$(top_builddir)/../SystemC-VPC/include/systemcvpc \
  $SYSTEMC_INCLUDE"
AC_SUBST([SYSTEMC_VPC_INCLUDE])
 
SYSTEMC_VPC_LDFLAGS=" \
  -L\$(top_builddir)/../SystemC-VPC \
  $SYSTEMC_LDFLAGS"
AC_SUBST([SYSTEMC_VPC_LDFLAGS])

SYSTEMC_VPC_DEPENDENCIES=" \
  \$(top_builddir)/../SystemC-VPC/libsystemcvpc.la"
AC_SUBST([SYSTEMC_VPC_DEPENDENCIES])

### SysteMoC ###
SYSTEMOC_INCLUDE=" \
  -I\$(top_builddir)/../SysteMoC/include/systemoc \
  $SYSTEMC_INCLUDE $BOOST_INCLUDE"
AC_SUBST([SYSTEMOC_INCLUDE])

SYSTEMOC_LDFLAGS=" \
  -L\$(top_builddir)/../SysteMoC \
  $SYSTEMC_LDFLAGS $BOOST_LDFLAGS"
AC_SUBST([SYSTEMOC_LDFLAGS])

SYSTEMOC_DEPENDENCIES=" \
  \$(top_builddir)/../SysteMoC/libsystemoc.la"
AC_SUBST([SYSTEMOC_DEPENDENCIES])


AC_CONFIG_FILES(
[ Makefile \
  mpeg4-ref/Makefile \
  idct2d-ref/Makefile \
  systemc-csp/Makefile \
  systemc-sdf/Makefile \
  systemc-sqr/Makefile \
  systemc-fir/Makefile \
  systemc-select/Makefile \
  systemc-mpeg4/Makefile \
  systemc-mpeg4-teich-v2/Makefile \
  systemc-biquad-teich-v2/Makefile \
  vpc-test-h261/Makefile \
  systemc-td-sim-test/Makefile \
  systemc-ibtest/Makefile])
ACJF_DONE

AC_OUTPUT
