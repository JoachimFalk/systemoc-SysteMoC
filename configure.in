SYSTEMOC_LDFLAGS=" \
  -L\$(top_builddir)/../SysteMoC \
  $SYSTEMC_LDFLAGS $BOOST_LDFLAGS"
AC_SUBST([SYSTEMOC_LDFLAGS])

SYSTEMOC_DEPENDENCIES=" \
