dnl 

### SysteMoC ###
SYSTEMOC_INCLUDE=" \
  -I`pwd`/../SysteMoC/include/systemoc \
  $SYSTEMC_INCLUDE $BOOST_INCLUDE"
AC_SUBST([SYSTEMOC_INCLUDE])

SYSTEMOC_LDFLAGS=" \
  -L`pwd`/../SysteMoC \
  $SYSTEMC_LDFLAGS $BOOST_LDFLAGS"
AC_SUBST([SYSTEMOC_LDFLAGS])

SYSTEMOC_DEPENDENCIES=" \
  `pwd`/../SysteMoC/libsystemoc.la"
AC_SUBST([SYSTEMOC_DEPENDENCIES])


AC_CONFIG_FILES(
[ Makefile \
  systemc-csp/Makefile \
  systemc-sdf/Makefile \
  systemc-sqr/Makefile \
  systemc-fir/Makefile \
  systemc-select/Makefile \
  systemc-mpeg4/Makefile \
  systemc-ibtest/Makefile])
dnl  vpc-test-h261/Makefile \
dnl  systemc-td-sim-test/Makefile])
ACJF_DONE

AC_OUTPUT
